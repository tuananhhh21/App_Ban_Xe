<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/coffeeImage"
                android:src="@drawable/anh1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="description"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/coffeeName"
                android:id="@+id/description"
                android:layout_toRightOf="@+id/coffeeImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0D8CE7"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/coffeeName"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/coffeeImage"
                tools:text="Tên thức uống"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/description"
                android:layout_toRightOf="@+id/coffeeImage"
                android:id="@+id/clickheretoorder"
                android:textColor="#0D8CE7"
                tools:text="Chạm để đặt hàng"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
